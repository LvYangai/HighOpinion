<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">
    <LinearLayout
        android:paddingTop="5dp"
        android:paddingBottom="5dp"
        android:paddingLeft="7dp"
        android:orientation="vertical"
        android:paddingRight="5dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:id="@+id/item_search_title"
            android:layout_width="match_parent"
            android:textColor="@color/my_black"
            android:maxLines="1"
            android:singleLine="true"
            android:textStyle="normal"
            android:ellipsize="end"
            android:text="使用更强大的搜索功能去吧"
            android:textSize="23sp"
            android:layout_height="wrap_content" />
        <LinearLayout
            android:layout_marginTop="3dp"
            android:gravity="center_vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <TextView
                android:id="@+id/item_search_lable"
                android:layout_marginRight="7dp"
                android:paddingLeft="3dp"
                android:layout_marginTop="2dp"
                android:paddingRight="3dp"
                android:paddingTop="2dp"
                android:textSize="10sp"
                android:paddingBottom="2dp"
                android:textColor="@color/black_45_trans40"
                android:text="文章"
                android:background="@color/my_hint"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
            <TextView
                android:id="@+id/item_search_username"
                android:textSize="15sp"
                android:text="喂你好阿"
                android:layout_marginRight="4dp"
                android:maxLines="1"
                android:singleLine="true"
                android:ellipsize="end"
                android:maxLength="8"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
            <TextView
                android:textSize="30sp"
                android:text="·"
                android:maxLines="1"
                android:layout_marginRight="4dp"
                android:singleLine="true"
                android:ellipsize="end"
                android:maxLength="8"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
            <TextView
                android:id="@+id/item_search_like"
                android:textSize="15sp"
                android:text="12 收藏"
                android:maxLines="1"
                android:layout_marginRight="4dp"
                android:singleLine="true"
                android:ellipsize="end"
                android:maxLength="8"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
        </LinearLayout>
        <View
            android:layout_marginTop="3dp"
            android:background="@color/mylistView"
            android:layout_width="match_parent"
            android:layout_height="1dp"/>

    </LinearLayout>
</LinearLayout>