<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:orientation="vertical"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="150dp">
        <LinearLayout
            android:paddingTop="12dp"
            android:paddingBottom="12dp"
            android:layout_width="0dp"
            android:layout_weight="10"
            android:gravity="center"
            android:layout_height="match_parent">
            <com.lvyangai.highopinion.view.RoundImageView
                android:src="@mipmap/bg_1"
                android:id="@+id/item_third_image"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_margin="5dp" />
        </LinearLayout>
        <LinearLayout
            android:layout_margin="5dp"
            android:orientation="vertical"
            android:gravity="center_horizontal"
            android:layout_width="0dp"
            android:layout_weight="16"
            android:layout_height="match_parent">
            <TextView
                android:id="@+id/item_third_title"
                android:layout_marginTop="5dp"
                android:textSize="18sp"
                android:textColor="@color/my_black"
                android:layout_marginBottom="5dp"
                android:text="啊房间萨里还放假啊随机发货"
                android:layout_width="match_parent"
                android:maxLines="2"
                android:singleLine="false"
                android:ellipsize="end"
                android:layout_height="70dp" />

            <LinearLayout
                android:gravity="center_vertical|bottom"
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <LinearLayout
                    android:layout_marginBottom="5dp"
                    android:gravity="center_vertical"
                    android:paddingRight="100dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                    <LinearLayout
                        android:layout_width="0dp"
                        android:gravity="center_vertical"
                        android:layout_weight="6"
                        android:layout_height="wrap_content">
                        <ImageView
                            android:background="@mipmap/icon_user"
                            android:layout_width="20dp"
                            android:layout_height="20dp" />
                        <TextView
                            android:id="@+id/item_third_user"
                            android:text="admin"
                            android:singleLine="true"
                            android:maxLines="1"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content" />
                    </LinearLayout>
                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_weight="4"
                        android:gravity="center|right"
                        android:layout_height="wrap_content">
                        <ImageView
                            android:background="@mipmap/icon_hot"
                            android:layout_width="20dp"
                            android:layout_height="20dp" />
                        <TextView
                            android:id="@+id/item_third_hot"
                            android:text="99+"
                            android:singleLine="true"
                            android:maxLines="1"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content" />
                    </LinearLayout>
                </LinearLayout>
                <TextView
                    android:gravity="center_vertical"
                    android:id="@+id/item_third_date"
                    android:text="2019.05.10"
                    android:layout_width="match_parent"
                    android:layout_height="25dp" />
            </LinearLayout>
        </LinearLayout>
    </LinearLayout>
    <View
        android:layout_marginTop="3dp"
        android:background="@color/mylistView"
        android:layout_width="match_parent"
        android:layout_height="1dp"/>
</LinearLayout>